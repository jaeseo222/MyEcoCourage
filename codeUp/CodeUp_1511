//테두리의 합

import java.util.Scanner;

public class Main{
	public static void main(String[] args)
	{
		Scanner scan=new Scanner(System.in);
		int a=scan.nextInt();
		int[][] ar=new int[a][a];
		int A=0;
		
		for(int i=0,c=1;i<ar.length;i++) {
			for(int j=0;j<ar[i].length;j++)
			{
				ar[i][j]=c++;
				if(i==0||i==a-1||j==0||j==a-1)
					A+=ar[i][j];
			}
		}

		System.out.println(A);
		
		
	}
}
