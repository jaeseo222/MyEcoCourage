import java.util.Arrays;
import java.util.Scanner;
//숫자 다루기
public class Main{
	public static void main(String[] args)
	{
		Scanner scan=new Scanner(System.in);
		String n=scan.next();
		
		char[] an=n.toCharArray();
		char[] arr=new char[an.length];
		Integer a=0;
		
		for(int i=an.length-1,j=0;i>=0;i--,j++) {
			arr[j]=an[i];
			a+=Integer.valueOf(String.valueOf(arr[j]));
		}

		String m=String.valueOf(arr);
		System.out.println(Integer.valueOf(m));
		
		System.out.println(a);
		
		
	}
}
