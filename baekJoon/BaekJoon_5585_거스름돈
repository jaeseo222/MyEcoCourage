
import java.util.Scanner;

// 5585 거스름돈
public class Main{
	public static void main(String[] args)
	{
		Scanner scan=new Scanner(System.in);
		
		int n=scan.nextInt();
		int a=0;
		n=1000-n;
		while(n>=500) { n-=500; a++; }
		while(n>=100) { n-=100; a++; }
		while(n>=50) { n-=50; a++; }
		while(n>=10){ n-=10; a++; }
		while(n>=5) { n-=5; a++; }
		while(n>=1) { n-=1; a++; }

		System.out.println(a);

		
		
	}
}
